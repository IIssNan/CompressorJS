<?xml version="1.0" ?>
<project name="JS Compressor" basedir="." default="run">
    <property name="dir.lib" value="${basedir}/lib" />
    <property name="dir.tmp" value="${basedir}/tmp" />

    <fail unless="dir.source" message="dir.source Must be specified!"/>

    <!-- 参数信息 -->
    <property name="dir.source" value="${dir.source}" />
    <property name="dir.output" value="${dir.output}" />
    <property name="file.includes" value="${file.includes}" />
    <property name="file.excludes" value="${file.excludes}" />
    <property name="file.destname" value="${file.destname}" />
    
    <target name="init">
        <tstamp />
        <echo>Start Compressing...</echo>
        <mkdir dir="${dir.tmp}" />
    </target>

    <taskdef name="jslint" classname="com.googlecode.jslint4java.ant.JSLintTask" classpath="${dir.lib}/jslint4java-2.0.0.jar" />
    <target name="lint">
        <jslint haltOnFailure="false" options="white">
            <formatter type="plain" />
            <fileset dir="${dir.source}" includes="${file.includes}" excludes="*jquery*.js, *qunit*.js, ${file.excludes}" />
        </jslint>
    </target>

    <target name="concat" depends="lint">
        <concat destfile="${dir.tmp}/${file.destname}.js">
            <fileset
                    dir="${dir.source}"
                    includes="${file.includes}"
                    excludes="*.min.js, *jquery*.js, *qunit*.js, ${file.excludes}"
             />
        </concat>
    </target>

    <target name="compress" depends="concat">
        <property name="google-compiler" value="${dir.lib}/compiler.jar" />
        <apply executable="java" dest="${dir.output}">
            <fileset dir="${dir.tmp}" includes="${file.destname}.js" />
            <arg line="-jar" />
            <arg path="${google-compiler}" />
            <arg line="--js" />
            <srcfile />
            <arg line="--js_output_file" />
            <mapper type="glob" from="*.js" to="*.min.js" />
            <targetfile />
        </apply>
    </target>

    <target name="clean">
        <delete file="${dir.tmp}/${file.destname}.js" />
    </target>

    <target name="run" depends="init, compress, clean" />
</project>